@startuml
class Pizza{
int size
String dough
List <String> topping
}

interface PizzaBuilder{
+buildSize(int):PizzaBuilder
+buildDough(String):PizzaBuilder
+addTopping(String):PizzaBuilder
+getResult(): Pizza
}
class HawaiianPizzaBuilder implements PizzaBuilder
class VeggiePizzaBuilder implements PizzaBuilder

class PizzaDirector{
-builder: PizzaBuilder
+setBuilder(builder: PizzaBuilder)
+buildPizza(): Pizza
}

class Client
Client --> PizzaDirector
PizzaDirector o--> PizzaBuilder
PizzaBuilder --> Pizza


@enduml
}